# ASTRA Environment Configuration Template
# Copy this file to .env and configure with your actual values

# Service URLs (for multi-host deployments)
DETECTION_SERVICE_URL=http://localhost:8002
INGESTION_SERVICE_URL=http://localhost:8001
ANALYTICS_SERVICE_URL=http://localhost:8003

# Service Ports
INGESTION_PORT=8001
DETECTION_PORT=8002
ANALYTICS_PORT=8003

# AI Model Configuration
DETECTION_MODEL=facebook/bart-large-mnli
MODEL_CACHE_DIR=./models/cache

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database (for future persistence)
# DATABASE_URL=postgresql://user:password@localhost:5432/astra
# REDIS_URL=redis://localhost:6379/0

# Security (add when implementing authentication)
# SECRET_KEY=your-secret-key-here
# API_KEY=your-api-key-here

# External API Keys (add as needed)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
